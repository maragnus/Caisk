@inherits LayoutComponentBase

<MyMudThemeProvider/>

<MudLayout>
    <MudAppBar Fixed>
        @*<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="@ToggleDrawer"/>*@
        <MudText>Caisk Application Manager</MudText>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/maragnus/caisk"/>
    </MudAppBar>
    <MudDrawer Open="@Open" Breakpoint="Breakpoint.Md" PreserveOpenState Variant="@DrawerVariant.Mini" ClipMode="@DrawerClipMode.Always">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body

        <div id="blazor-error-ui">
            An unhandled error has occurred.
            <a href="" class="reload">Reload</a>
            <a class="dismiss">🗙</a>
        </div>
    </MudMainContent>
</MudLayout>

@code {
    public bool Open { get; set; }
    void ToggleDrawer() => Open = !Open;
}